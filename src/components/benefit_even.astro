---
const {benefitType} = Astro.props;
import { t } from "i18next";
---

<div class="mx-auto max-w-5xl px-6 py-4 sm:py-6 lg:px-8 lg:py-12 dark:bg-stone-950 md:flex flex-row-reverse">
    <div>
        
    </div>
    <div class="space-y-6 md:7/12 lg:w-1/2">
        <h2  class="text-3xl font-bold text-gray-900 md:text-4xl dark:text-white">{t(benefitType+".title")}</h2>
        <div class="mx-auto space-y-4 divide-y divide-gray-900/10 dark:divide-gray-100/10">
            <div class="w-5/6">
                <h3 class="mt-4 font-semibold text-lg text-brand-primary dark:text-brand-tertiary">{t(benefitType+".item1_title")}</h3>
                <p class="mt-1 text-gray-900 dark:text-gray-100">{t(benefitType+".item1_text")}</p>
            </div>
            <div class="mt-4">
                <h3 class="mt-4 font-semibold text-lg text-teal-500 dark:text-teal-300">{t(benefitType+".item2_title")}</h3>
                <p class="mt-1 text-gray-900 dark:text-gray-100">{t(benefitType+".item2_text")}</p>
            </div>
            <div class="mt-4">
                <h3 class="mt-4 font-semibold text-lg text-indigo-500 dark:text-indigo-300">{t(benefitType+".item3_title")}</h3>
                <p class="mt-1 text-gray-900 dark:text-gray-100">{t(benefitType+".item3_text")}</p>
            </div>
        </div>
    </div>

</div>